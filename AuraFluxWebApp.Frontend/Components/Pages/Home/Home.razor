@page "/"

<PageTitle>Home</PageTitle>

<section id="home" class="section-1 d-flex flex-column justify-content-center align-items-center vh-100"  >
    <div class="d-flex flex-column" >
        <h1 class="color-white dm-serif" >Build <span class="fugaz-font" >innovative</span> apps with us.</h1>
    </div>
</section>

<section id="about" class="section-2 d-flex flex-column justify-content-center align-items-center vh-100" >
    <div class="container text-center">
        <div class="row d-flex flex-column-reverse flex-md-row">
            <div class="col d-flex justify-content-center align-items-center">
                <p class="dm-serif responsive-text px-4 text-start">
                    AuraFlux LLC is a solo software development company dedicated to crafting innovative apps, websites, 
                    and web applications. With a passion for clean design and seamless user experiences, 
                    AuraFlux specializes in building functional and engaging digital solutions. Whether developing intuitive mobile apps, dynamic web platforms, or custom software, the focus is always on quality, efficiency, and user satisfaction.
                </p>            
            </div>
            <div class="col d-flex justify-content-center align-items-center">
                <h1 class="fugaz-font color-green">About</h1>
            </div>
        </div>
    </div>
</section>

<section id="projects" class="section-3 d-flex flex-column justify-content-center alight-items-center vh-100 ">
    <div class="container text-center" >
        <div class="row d-flex flex-column flex-md-row">
            <div class="col d-flex justify-content-center align-items-center">
                <h1 class="fugaz-font color-green">Projects</h1>
            </div>
            <div class="col d-flex flex-column justify-content-center align-items-center">
                <h1 class="raleway-font fw-bold" style="color: #4366FB;" >LooReview</h1>
                <div class="row d-flex justify-content-center align-items-center">
                    <div class="col d-flex flex-column justify-content-start align-items-center" >
                        <p class="text-center raleway-font looreview-text">
                            LooReview is an early access mobile app that helps you quickly find public, accessible restrooms 
                            in New York City. Easily search nearby, read reviews, and share ratings-all in a simple, 
                            user-friendly app. 
                            <br><br> 
                            We currently have the most comprehensive restroom data in NYC! 
                            Want the same for your city? Reach out to us, and we’ll make it happen!
                        </p>
                        <div class="d-flex justify-content-end py-2" >
                            <div class="px-2">
                                <a href="https://apps.apple.com/us/app/looreview-by-auraflux/id6499471502">
                                    <img src="icons/app-store-icon.png" alt="Icon" width="30" height="30" />
                                </a>
                            </div>
                            <div class="px-2">
                                <a href="https://play.google.com/store/apps/details?id=com.gagebuss7.BathroomBuddyapp&hl=en_US">
                                    <img src="icons/google-play-icon.png" alt="Icon" width="30" height="30" />
                                </a>
                            </div>
                            <div class="px-2" >
                                <a href="https://www.instagram.com/aurafluxllc/">
                                    <img src="icons/instagram-icon.png" alt="Icon" width="30" height="30" />
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-5 col-4">
                        <Carousel Items=@looReviewImgs />
                    </div>
                </div>                
            </div>           
        </div>
    </div>
</section>


<section id="contact-us" class="section-4 d-flex flex-column justify-content-center alight-items-center vh-100 " >
    <div class="container text-center" >
        <div class="row d-flex flex-column-reverse flex-md-row">
            <div class="col d-flex flex-column" >
                <ContactForm />
            </div>
            <div class="col d-flex justify-content-center align-items-center">
                <h1 class="fugaz-font color-green">Contact us</h1>
            </div>
        </div>
    </div>
</section>

@code {
    private List<string> looReviewImgs = new List<string> {
        "/images/1.0.15-Home.png",
        "/images/1.0.15-Feed.png",
        "/images/1.0.15-Profile.png"
    };  
}


